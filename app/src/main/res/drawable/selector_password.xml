<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State Checked (Password Kelihatan) -> Tampilkan icon Hide (Ukuran dipaksa 24dp) -->
    <item android:state_checked="true">
        <layer-list>
            <item android:width="24dp" android:height="24dp" android:drawable="@drawable/hide" android:gravity="center"/>
        </layer-list>
    </item>

    <!-- State Default (Password Sembunyi) -> Tampilkan icon View (Ukuran dipaksa 24dp) -->
    <item>
        <layer-list>
            <item android:width="24dp" android:height="24dp" android:drawable="@drawable/view" android:gravity="center"/>
        </layer-list>
    </item>
</selector>